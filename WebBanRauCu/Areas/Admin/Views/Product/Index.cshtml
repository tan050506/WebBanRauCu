@model IEnumerable<WebBanRauCu.Models.Product>

@{
    ViewData["Title"] = "Quản lý sản phẩm";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary fw-bold">QUẢN LÝ SẢN PHẨM</h2>

        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary me-2">
            <i class="bi bi-arrow-left-circle"></i> Về Dashboard
        </a>

        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Thêm mới
        </a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body p-3">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-10">
                    <input type="text" name="searchString" class="form-control" placeholder="Nhập tên sản phẩm để tìm kiếm..." value="@ViewData["CurrentFilter"]">
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Tìm kiếm
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle mb-0">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th class="py-3 ps-3">Hình ảnh</th>
                            <th class="py-3">Tên sản phẩm</th>
                            <th class="py-3">Giá bán</th>
                            <th class="py-3">Danh mục</th>
                            <th class="py-3 text-center" style="width: 200px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-3">
                                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                                        {
                                            <img src="@item.ImageUrl" alt="@item.Name"
                                                 style="width: 60px; height: 60px; object-fit: cover; border-radius: 8px; border: 1px solid #ddd;" />
                                        }
                                        else
                                        {
                                            <span class="text-muted small">Checking...</span>
                                        }
                                    </td>
                                    <td class="fw-bold text-dark">@item.Name</td>
                                    <td class="text-danger fw-bold">@item.Price.ToString("#,##0") đ</td>
                                    <td>
                                        <span class="badge bg-info text-dark">@item.Category?.Name</span>
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1" title="Sửa">
                                            <i class="bi bi-pencil-square"></i> Sửa
                                        </a>

                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1 text-white" title="Chi tiết">
                                            <i class="bi bi-info-circle"></i> Chi tiết
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Xóa">
                                            <i class="bi bi-trash"></i> Xóa
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-4 text-muted">
                                    <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                    Không tìm thấy sản phẩm nào.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>