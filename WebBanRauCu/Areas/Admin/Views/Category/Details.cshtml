@model WebBanRauCu.Models.Category

@{
    ViewData["Title"] = "Chi tiết danh mục";
}

<div class="container py-4">
    <div class="card shadow col-md-8 mx-auto">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0 fw-bold">CHI TIẾT DANH MỤC</h4>
        </div>
        <div class="card-body">
            <dl class="row fs-5">
                <dt class="col-sm-4 text-muted">
                    Tên danh mục:
                </dt>
                <dd class="col-sm-8 fw-bold text-primary">
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt class="col-sm-4 text-muted">
                    Thứ tự hiển thị:
                </dt>
                <dd class="col-sm-8">
                    <span class="badge bg-warning text-dark">@Html.DisplayFor(model => model.DisplayOrder)</span>
                </dd>
            </dl>

            <div class="mt-4 border-top pt-3 text-end">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning me-2">
                    <i class="bi bi-pencil-square"></i> Sửa
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-return-left"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>