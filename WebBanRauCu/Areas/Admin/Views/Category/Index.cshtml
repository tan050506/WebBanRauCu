@model IEnumerable<WebBanRauCu.Models.Category>
@{
    ViewData["Title"] = "Quản lý danh mục";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-success fw-bold">QUẢN LÝ DANH MỤC</h2>
        <div>
            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary me-2">
                <i class="bi bi-arrow-left-circle"></i> Về Dashboard
            </a>
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Thêm mới
            </a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0 align-middle">
                <thead class="bg-success text-white">
                    <tr>
                        <th>Tên danh mục</th>
                        <th>Thứ tự hiển thị</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">@item.Name</td>
                            <td><span class="badge bg-light text-dark border">@item.DisplayOrder</span></td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i> Sửa
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa?')">
                                    <i class="bi bi-trash"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>