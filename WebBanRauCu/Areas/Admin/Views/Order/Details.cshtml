@model WebBanRauCu.Models.Order
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<div class="container py-4">
    <div class="card shadow">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Chi tiết đơn hàng #@Model.Id</h4>
            <span class="badge bg-white text-dark fs-6">
                @switch (Model.Status)
                {
                    case 1:
                        <text>Đang xử lý</text>
                        ; break;
                    case 2:

                        <text>Đang giao hàng</text>
                        ; break;
                    case 3:

                        <text>Đã giao thành công</text>
                        ; break;
                    case 0:

                        <text>Đã hủy</text>
                        ; break;
                }
            </span>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h5 class="fw-bold">Thông tin người nhận</h5>
                    <p>Họ tên: <strong>@Model.CustomerName</strong></p>
                    <p>SĐT: <strong>@Model.PhoneNumber</strong></p>
                    <p>Địa chỉ: @Model.Address</p>
                    <p>Ngày đặt: @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
                </div>
            </div>

            <h5 class="fw-bold">Danh sách sản phẩm</h5>
            <table class="table table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Sản phẩm</th>
                        <th>Đơn giá</th>
                        <th>Số lượng</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var detail in Model.OrderDetails)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="@detail.Product.ImageUrl" style="width: 50px; height: 50px; object-fit: cover; margin-right: 10px;" />
                                    <span>@detail.Product.Name</span>
                                </div>
                            </td>
                            <td>@detail.Price.ToString("#,##0") đ</td>
                            <td class="text-center">@detail.Quantity</td>
                            <td class="fw-bold">@((detail.Price * detail.Quantity).ToString("#,##0")) đ</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" class="text-end fw-bold">Tổng thanh toán:</td>
                        <td class="text-danger fw-bold fs-5">@Model.TotalAmount.ToString("#,##0") đ</td>
                    </tr>
                </tfoot>
            </table>

            <div class="text-end mt-3">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-return-left"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>