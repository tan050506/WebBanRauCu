@model IEnumerable<WebBanRauCu.Models.CartItem>

@{
    ViewData["Title"] = "Giỏ hàng của bạn";
    double totalAmount = 0;
}

<div class="container mt-4">
    <h2><i class="fa fa-shopping-cart"></i> Giỏ hàng của bạn</h2>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered mt-3 text-center align-middle">
            <thead class="table-success">
                <tr>
                    <th>Hình ảnh</th>
                    <th>Tên sản phẩm</th>
                    <th>Giá</th>
                    <th>Số lượng</th>
                    <th>Thành tiền</th>
                    <th>Chức năng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    totalAmount += item.Total;
                    <tr>
                        <td>
                            <img src="@item.ImageUrl" style="width: 50px; height: 50px; object-fit: cover;" />
                        </td>
                        <td>@item.ProductName</td>
                        <td>@item.Price.ToString("#,##0") đ</td>
                        <td>
                            <span class="badge bg-secondary">@item.Quantity</span>
                        </td>
                        <td class="fw-bold">@item.Total.ToString("#,##0") đ</td>
                        <td>
                            <a asp-action="Remove" asp-route-id="@item.ProductId" class="btn btn-sm btn-danger">Xóa</a>
                        </td>
                    </tr>
                }
                <tr>
                    <td colspan="4" class="text-end fw-bold">Tổng cộng:</td>
                    <td colspan="2" class="text-danger fw-bold fs-4">@totalAmount.ToString("#,##0") đ</td>
                </tr>
            </tbody>
        </table>

        <div class="text-end">
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Tiếp tục mua hàng</a>
            <a asp-controller="Cart" asp-action="Checkout" class="btn btn-success">Thanh toán ngay</a>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            Giỏ hàng trống trơn! <a asp-controller="Home" asp-action="Index">Mua rau ngay</a>
        </div>
    }
</div>