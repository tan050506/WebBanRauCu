@model IEnumerable<WebBanRauCu.Models.CartItem>

@{
    ViewData["Title"] = "Giỏ hàng của bạn";
    double totalAmount = 0;
}

<div class="container mt-5">
    <div class="d-flex align-items-center mb-4">
        <h2 class="fw-bold text-success mb-0">
            <i class="bi bi-cart-check-fill me-2"></i> GIỎ HÀNG CỦA BẠN
        </h2>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead style="background-color: #f8fdf9;">
                            <tr class="text-center">
                                <th class="py-3" style="width: 15%;">Hình ảnh</th>
                                <th class="py-3 text-start">Tên sản phẩm</th>
                                <th class="py-3">Giá</th>
                                <th class="py-3" style="width: 20%;">Số lượng</th>
                                <th class="py-3">Thành tiền</th>
                                <th class="py-3">Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                totalAmount += item.Total;
                                <tr class="text-center">
                                    <td>
                                        <img src="@item.ImageUrl" class="rounded shadow-sm" style="width: 70px; height: 70px; object-fit: cover; border: 1px solid #eee;" />
                                    </td>
                                    <td class="text-start fw-bold text-dark">@item.ProductName</td>
                                    <td class="text-muted">@item.Price.ToString("#,##0") đ</td>
                                    <td>
                                        <div class="d-flex justify-content-center align-items-center">
                                            
                                            <a asp-controller="Cart" asp-action="UpdateQuantity" asp-route-id="@item.ProductId" asp-route-amount="-1" 
                                               class="btn btn-sm btn-outline-secondary rounded-circle px-2 shadow-sm">
                                                <i class="bi bi-dash-lg"></i>
                                            </a>

                                            <span class="mx-3 fw-bold fs-5" style="min-width: 30px;">@item.Quantity</span>

                                            <a asp-controller="Cart" asp-action="UpdateQuantity" asp-route-id="@item.ProductId" asp-route-amount="1" 
                                               class="btn btn-sm btn-outline-secondary rounded-circle px-2 shadow-sm">
                                                <i class="bi bi-plus-lg"></i>
                                            </a>
                                        </div>
                                    </td>
                                    <td class="fw-bold text-success">@item.Total.ToString("#,##0") đ</td>
                                    <td>
                                        <a asp-controller="Cart" asp-action="Remove" asp-route-id="@item.ProductId" 
                                           class="btn btn-sm btn-outline-danger border-0" 
                                           onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?')">
                                            <i class="bi bi-trash3"></i> Xóa
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="bg-light">
                            <tr>
                                <td colspan="4" class="text-end py-3 fw-bold fs-5">Tổng tiền cộng dồn:</td>
                                <td colspan="2" class="text-center py-3 text-danger fw-bold fs-4">@totalAmount.ToString("#,##0") đ</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-4 mb-5">
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-dark px-4 py-2 rounded-pill">
                <i class="bi bi-arrow-left"></i> Tiếp tục mua hàng
            </a>
            <a asp-controller="Cart" asp-action="Checkout" class="btn btn-success px-5 py-2 rounded-pill shadow">
                Thanh toán ngay <i class="bi bi-credit-card-2-back ms-2"></i>
            </a>
        </div>
    }
    else
    {
        <div class="text-center py-5 shadow-sm bg-white rounded-3">
            <i class="bi bi-cart-x text-muted display-1"></i>
            <h3 class="mt-3 text-muted">Giỏ hàng của bạn đang trống!</h3>
            <p class="text-muted mb-4">Hãy chọn những món rau củ tươi ngon nhất cho gia đình nhé.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-success px-5 py-2 rounded-pill shadow">
                Đến cửa hàng ngay
            </a>
        </div>
    }
</div>