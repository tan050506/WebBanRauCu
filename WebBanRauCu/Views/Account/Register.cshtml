@using WebBanRauCu.ViewModels;
@model RegisterVM

@{
    ViewData["Title"] = "Register";
}

@section Styles {
    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
}

<div class="reg-container">
    <div class="reg-form-box">
        <h2 class="reg-title">Register</h2>

        <form asp-action="Register" method="post" enctype="multipart/form-data" asp-route-returnurl="@ViewData["ReturnUrl"]">
            <div asp-validation-summary="ModelOnly" class="reg-error-summary"></div>

            <div class="reg-input-group">
                <label asp-for="Name">Full Name</label>
                <input asp-for="Name" placeholder="Enter your full name" />
                <span asp-validation-for="Name" class="reg-error"></span>
            </div>

            <div class="reg-input-group">
                <label asp-for="Email">Email Address</label>
                <input asp-for="Email" placeholder="example@mail.com" />
                <span asp-validation-for="Email" class="reg-error"></span>
            </div>

            <div class="reg-input-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" placeholder="••••••••" />
                <span asp-validation-for="Password" class="reg-error"></span>
            </div>

            <div class="reg-input-group">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" placeholder="••••••••" />
                <span asp-validation-for="ConfirmPassword" class="reg-error"></span>
            </div>

            <div class="reg-input-group">
                <label asp-for="Address">Address</label>
                <textarea asp-for="Address" rows="2" placeholder="Your home address"></textarea>
                <span asp-validation-for="Address" class="reg-error"></span>
            </div>

            <div class="reg-actions">
                <button type="submit" class="reg-btn-submit">Create Account</button>
                <div class="reg-footer">
                    <a asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">
                        Already have an account? Login here
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}