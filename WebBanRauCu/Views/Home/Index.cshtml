@model IEnumerable<WebBanRauCu.Models.Product>

@{
    ViewData["Title"] = "Trang chủ";
}

<div class="container-fluid p-0 mb-4">
    <div class="p-5 text-center bg-image position-relative rounded-3 shadow-sm" 
         style="background-image: url('https://images.unsplash.com/photo-1610348725531-843dff563e2c?q=80&w=2670&auto=format&fit=crop'); 
                background-size: cover; background-position: center; height: 350px;">
        
        <div class="mask position-absolute top-0 start-0 w-100 h-100" style="background-color: rgba(0, 0, 0, 0.5); border-radius: 0.3rem;"></div>

        <div class="position-relative d-flex justify-content-center align-items-center h-100 flex-column text-white">
            <h1 class="display-4 fw-bold mb-3" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.5);">
                Thực phẩm Sạch & Tươi Ngon
            </h1>
            <h4 class="mb-4 fw-light">Cung cấp rau củ quả đạt chuẩn VietGAP ngay tại nhà bạn.</h4>
            
            <div class="w-100 d-flex justify-content-center">
                <div class="col-md-6">
                    <form asp-controller="Home" asp-action="Index" method="get" class="input-group input-group-lg shadow">
                        <input type="text" name="searchString" class="form-control border-0" 
                               placeholder="Bạn muốn tìm rau củ gì hôm nay?" 
                               value="@ViewBag.SearchString">
                        <button class="btn btn-success px-4 fw-bold" type="submit">
                            <i class="bi bi-search"></i> TÌM KIẾM
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="sticky-top" style="top: 20px; z-index: 1;">
                @await Component.InvokeAsync("MenuLoai")
                
                <div class="mt-4 rounded-3 overflow-hidden shadow-sm d-none d-md-block">
                    <img src="https://images.unsplash.com/photo-1518843875459-f738682238a6?q=80&w=2684&auto=format&fit=crop" 
                         class="w-100" style="height: 300px; object-fit: cover;">
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div class="d-flex justify-content-between align-items-center border-bottom pb-2 mb-4">
                <h3 class="text-uppercase fw-bold text-success mb-0">
                    <i class="bi bi-bag-heart-fill me-2"></i>
                    @(!string.IsNullOrEmpty(ViewBag.SearchString as string) ? $"Kết quả: {ViewBag.SearchString}" : "Sản phẩm nổi bật")
                </h3>
                <span class="text-muted small">Hiển thị @Model.Count() sản phẩm</span>
            </div>

            <div class="row row-cols-1 row-cols-md-3 g-4">
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <div class="col">
                            <div class="card h-100 shadow-sm border-0 product-card">
                                <div class="position-relative overflow-hidden" style="height: 220px;">
                                    <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://via.placeholder.com/300" : item.ImageUrl)" 
                                         class="card-img-top h-100 w-100" 
                                         style="object-fit: cover; transition: transform 0.5s;"
                                         alt="@item.Name">
                                </div>

                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title fw-bold text-dark">@item.Name</h5>
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span class="badge bg-light text-dark border">
                                            @item.Category?.Name
                                        </span>
                                    </div>
                                    
                                    <div class="mt-auto d-flex justify-content-between align-items-center pt-3 border-top">
                                        <span class="text-success fw-bold fs-5">@item.Price.ToString("#,##0") đ</span>
                                        <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@item.Id" 
                                           class="btn btn-outline-success btn-sm rounded-pill px-3">
                                            <i class="bi bi-cart-plus"></i> Chọn mua
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center py-5">
                        <i class="bi bi-search display-1 text-muted"></i>
                        <p class="mt-3 text-muted">Không tìm thấy sản phẩm nào phù hợp.</p>
                    </div>
                }
            </div>

        </div>
    </div>
</div>

<style>
    .hover-up { transition: transform 0.3s ease, box-shadow 0.3s ease; }
    .hover-up:hover { transform: translateY(-5px); box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important; }
    
    /* Hiệu ứng zoom ảnh khi di chuột vào sản phẩm */
    .product-card:hover img { transform: scale(1.1); }
</style>

@section Scripts {
    <link rel="stylesheet" href="~/css/category-menu.css" asp-append-version="true" />
}