@model IEnumerable<WebBanRauCu.Models.Product>

@{
    ViewData["Title"] = "Trang chủ";
}

<div class="text-center my-4">
    <div class="p-5 bg-light border rounded-3">
        <h1 class="display-5 fw-bold text-success">Thực phẩm Sạch & Tươi Ngon</h1>
        <p class="fs-4">Cung cấp rau củ quả đạt chuẩn VietGAP ngay tại nhà bạn.</p>
        
        <div class="row justify-content-center mt-3">
            <div class="col-md-6">
                <form asp-controller="Home" asp-action="Index" method="get" class="input-group">
                    <input type="text" name="searchString" class="form-control" placeholder="Tìm sản phẩm..." value="@ViewBag.SearchString">
                    <button class="btn btn-success" type="submit">
                        <i class="fa fa-search"></i> Tìm kiếm
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-3 mb-4">
            @await Component.InvokeAsync("MenuLoai")
        </div>

        <div class="col-md-9">
            @if (!string.IsNullOrEmpty(ViewBag.SearchString as string))
            {
                <h3 class="mb-4 text-uppercase border-bottom pb-2">Kết quả cho: "@ViewBag.SearchString"</h3>
            }
            else
            {
                <h3 class="mb-4 text-uppercase border-bottom pb-2">Sản phẩm nổi bật</h3>
            }

            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (var item in Model)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <div style="height: 200px; overflow: hidden; position: relative;">
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="width: 100%; height: 100%; object-fit: cover;">
                                }
                                else
                                {
                                    <img src="https://via.placeholder.com/300x200?text=No+Image" class="card-img-top" alt="No image">
                                }
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@item.Name</h5>
                                <p class="card-text text-muted small">
                                   <i class="bi bi-tag-fill"></i> @item.Category?.Name
                                </p>
                                <div class="mt-auto d-flex justify-content-between align-items-center">
                                    <span class="text-danger fw-bold fs-5">@item.Price.ToString("#,##0") đ</span>
                                    <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@item.Id" class="btn btn-outline-success btn-sm">
                                        Chọn mua
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>