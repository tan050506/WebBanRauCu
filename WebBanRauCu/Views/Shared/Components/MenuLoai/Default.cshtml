@model IEnumerable<WebBanRauCu.Models.Category>

<div class="list-group">
    <a href="/" class="list-group-item list-group-item-action active bg-success border-success">
        Danh mục sản phẩm
    </a>
    @foreach (var item in Model)
    {
        // Link này sẽ trỏ đến trang lọc sản phẩm (sẽ làm ngay sau đây)
        <a asp-controller="Home" asp-action="FilterByCat" asp-route-id="@item.Id" class="list-group-item list-group-item-action">
            @item.Name
        </a>
    }
</div>